doctype html
- var pageTitle="Pokedex"
-
   var cssModulesOnPage = [
   'http://fonts.googleapis.com/icon?family=Material+Icons',
   './libs/material.min.css',
   './libs/materialize.min.css',
   './libs/bootstrap-grid.min.css',
   './assets/main.min.css', 
   ]
-
  var jsModulesOnPage = [
  './libs/jquery.min.js',
  './libs/material.min.js',
  './libs/materialize.min.js',
  './assets/main.min.js',
  ]
html
  head
    meta(charset='utf-8')
    title=pageTitle
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0")
    link(rel="icon" type="image/png" href="./img/favicon.png")
    each cssModule in cssModulesOnPage
      link(type="text/css" rel="stylesheet" href="#{cssModule}")
  body
    .mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      header.mdl-layout__header
        .mdl-layout__header-row
          h1.mdl-layout-title.mdl-layout-title_centered Pokedex
    
      main.mdl-layout__content
        .page-content
          .container
            section.row#filter__container
            section.row.cards__container
              .col-md-4.col-md-push-8#bigCard__container
              .col-md-8.col-md-pull-4
                .row#smallCard__container
                #loadMore__container
                  include ../blocks/loadMore/loadMore.jade
            section#preload__container
              include ../blocks/preloader/preloader.jade
    
    each jsModule in jsModulesOnPage
      script(src="#{jsModule}")
